{
    "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": ["esnext"],
      "allowJs": true,
      "declaration": false,
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "baseUrl": "./",
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "jsx": "react",
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "exclude": [
      "src/**/__tests__/*.ts",
      "node_modules"
    ]
  }