{
  "name": "kpc-booking-logistics-api",
  "version": "1.0.1",
  "engines": {
    "node": "14.16.0",
    "npm": ">=6.14"
  },
  "description": "kpc-booking-logistics",
  "scripts": {
    "dev": "nodemon",
    "prepare": "husky install",
    "test": "ts-mocha src/**/*.test.ts",
    "coverage": "nyc npm run test",
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "postbuild": "cp ./src/config/*.env dist/config/ && cp ./src/swagger.yaml dist",
    "prestart": "npm run build",
    "start": "node dist/cmd/start",
    "format": "prettier --write './src/**/*.{ts,tsx}' --config ./.prettierrc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingpowerclick/kpc-booking-logistics-api.git"
  },
  "author": "birdbida",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kingpowerclick/kpc-booking-logistics-api/issues"
  },
  "homepage": "https://github.com/kingpowerclick/kpc-booking-logistics-api#readme",
  "dependencies": {
    "@types/multer": "~1.4.7",
    "applicationinsights": "~2.1.6",
    "axios": "~0.21.1",
    "cors": "~2.8.5",
    "dotenv": "~10.0.0",
    "express": "~4.17.1",
    "express-async-errors": "~3.1.1",
    "express-validation": "~3.0.8",
    "http-status-codes": "~2.1.4",
    "jwt-decode": "~3.1.2",
    "lodash": "~4.17.21",
    "moment": "~2.29.1",
    "mongodb": "~3.6.9",
    "morgan": "~1.10.0",
    "multer": "~1.4.2",
    "nodemailer": "~6.6.2",
    "qs": "~6.10.1",
    "swagger-ui-express": "~4.1.6",
    "uuid": "~8.3.2",
    "yamljs": "~0.3.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.21",
    "@types/cors": "~2.8.12",
    "@types/express": "~4.17.12",
    "@types/lodash": "~4.14.170",
    "@types/mocha": "~9.0.0",
    "@types/mongodb": "~3.6.18",
    "@types/morgan": "~1.9.2",
    "@types/nodemailer": "~6.4.4",
    "@types/sinon": "~10.0.2",
    "@types/swagger-ui-express": "~4.1.2",
    "@types/uuid": "~8.3.1",
    "@types/yamljs": "~0.2.31",
    "@typescript-eslint/eslint-plugin": "~4.28.0",
    "@typescript-eslint/parser": "~4.28.0",
    "chai": "~4.3.4",
    "eslint": "~7.29.0",
    "husky": "~6.0.0",
    "lint-staged": "~11.0.0",
    "mocha": "~9.0.3",
    "nodemon": "~2.0.7",
    "nyc": "~15.1.0",
    "prettier": "2.3.1",
    "sinon": "~11.1.1",
    "ts-mocha": "~8.0.0",
    "ts-node": "~10.0.0",
    "typescript": "~4.3.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write --config ./.prettierrc",
      "bash -c tsc"
    ]
  }
}
