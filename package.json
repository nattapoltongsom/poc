{
  "name": "kpc-apps-program-x-api",
  "version": "1.0.0",
  "engines": {
    "node": "16.15.0",
    "npm": ">=8.1"
  },
  "description": "kpc-apps-program-x-api",
  "scripts": {
    "dev": "TZ='UTC' nodemon",
    "db-migrate:init-sql": "TZ='UTC' db-migrate create initialize --sql-file --config ./src/config/database.js",
    "db-migrate:create-sql": "TZ='UTC' db-migrate create $npm_config_message --sql-file --config ./src/config/database.js",
    "db-migrate:create": "TZ='UTC' db-migrate create $npm_config_message --config ./src/config/database.js",
    "db-migrate:up": "TZ='UTC' db-migrate up --config ./src/config/database.js",
    "db-migrate:down": "TZ='UTC' db-migrate down --config ./src/config/database.js",
    "db-migrate:reset": "TZ='UTC' db-migrate reset --config ./src/config/database.js",
    "prepare": "husky install",
    "test": "ts-mocha src/**/*.test.ts",
    "coverage": "nyc --reporter=html npm run test",
    "prebuild": "rm -rf dist/",
    "build": "tsc",
    "postbuild": "cp ./src/config/*.env dist/config/ && cp ./src/swagger.yaml dist",
    "prestart": "npm run build",
    "start": "TZ='UTC' node dist/cmd/start",
    "format": "prettier --write './src/**/*.{ts,tsx}' --config ./.prettierrc",
    "functional-test": "node ./functional-test/config.ts",
    "seed-data": "ts-node ./src/infrastructures/seed/migration.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingpowerclick/kpc-apps-program-x-api.git"
  },
  "author": "kongdev",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kingpowerclick/kpc-apps-program-x-api/issues"
  },
  "homepage": "https://github.com/kingpowerclick/kpc-apps-program-x-api#readme",
  "dependencies": {
    "16": "^0.0.2",
    "@aws-sdk/client-s3": "^3.150.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/ioredis": "^4.28.10",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/pg-format": "~1.0.2",
    "axios": "~0.21.1",
    "bcryptjs": "^2.4.3",
    "cors": "~2.8.5",
    "db-migrate": "~0.11.13",
    "db-migrate-pg": "~1.2.2",
    "delay-cli": "^2.0.0",
    "dotenv": "~10.0.0",
    "express": "~4.17.1",
    "express-async-errors": "~3.1.1",
    "express-validation": "~3.0.8",
    "http-status-codes": "~2.1.4",
    "ioredis": "^5.0.6",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "~3.1.2",
    "lodash": "~4.17.21",
    "moment": "~2.29.1",
    "morgan": "~1.10.0",
    "multer": "^1.4.5-lts.1",
    "object-mapper": "^6.2.0",
    "pg": "~8.7.1",
    "pg-format": "~1.0.4",
    "qs": "~6.10.1",
    "swagger-ui-express": "~4.2.0",
    "uuid": "~8.3.2",
    "xlsx": "^0.18.5",
    "yamljs": "~0.3.0"
  },
  "devDependencies": {
    "@types/chai": "~4.2.21",
    "@types/cors": "~2.8.12",
    "@types/express": "^4.17.13",
    "@types/lodash": "~4.14.170",
    "@types/mocha": "~9.0.0",
    "@types/morgan": "~1.9.2",
    "@types/node": "^18.19.21",
    "@types/pg": "~8.6.1",
    "@types/sinon": "~10.0.2",
    "@types/swagger-ui-express": "~4.1.2",
    "@types/uuid": "~8.3.1",
    "@types/yamljs": "~0.2.31",
    "@typescript-eslint/eslint-plugin": "~4.28.0",
    "@typescript-eslint/parser": "~4.28.0",
    "chai": "~4.3.4",
    "eslint": "~7.29.0",
    "husky": "~6.0.0",
    "lint-staged": "~11.0.0",
    "mocha": "~9.2.2",
    "newman": "^5.3.2",
    "nodemon": "~2.0.7",
    "nyc": "~15.1.0",
    "prettier": "2.3.1",
    "sinon": "~11.1.1",
    "ts-mocha": "~9.0.2",
    "ts-node": "~10.0.0",
    "typescript": "~4.3.4"
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint --cache --fix",
      "prettier --write --config ./.prettierrc",
      "bash -c tsc"
    ]
  }
}
